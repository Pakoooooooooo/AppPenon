<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Bouton Settings (toujours visible) -->
    <Button
        android:id="@+id/appModeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âš™ï¸ ParamÃ¨tres" />

    <!-- Status (visible dans les deux modes) -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="En attente..."
        android:textSize="16sp"
        android:gravity="center" />

    <!-- Boutons de contrÃ´le -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStartScan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="â–¶ï¸ DÃ©marrer" />

        <Button
            android:id="@+id/btnStopScan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="â¹ï¸ ArrÃªter"
            android:enabled="false" />

        <Button
            android:id="@+id/btnClearData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="ðŸ—‘ï¸ Effacer" />
    </LinearLayout>

    <!-- Champ nom de fichier (visible si rec cochÃ©) -->
    <EditText
        android:id="@+id/etFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Nom du fichier CSV"
        android:visibility="gone" />

    <!-- âœ… NOUVEAU : RecyclerView pour mode Standard -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPenonCards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <!-- Mode DÃ©veloppeur : Reste de votre layout existant -->
    <LinearLayout
        android:id="@+id/layoutDeveloper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Configuration Penons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSetP1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âš™ï¸ Config P1" />

            <Button
                android:id="@+id/btnSetP2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="âš™ï¸ Config P2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEtatPenon1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penon 1" />

        <TextView
            android:id="@+id/tvEtatPenon2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penon 2" />

        <!-- DonnÃ©es Penon 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="=== PENON 1 ==="
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvReceivedData1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvParsedData1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="monospace"
                    android:textSize="10sp" />
            </LinearLayout>
        </ScrollView>

        <!-- DonnÃ©es Penon 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="=== PENON 2 ==="
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvReceivedData2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvParsedData2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="monospace"
                    android:textSize="10sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>